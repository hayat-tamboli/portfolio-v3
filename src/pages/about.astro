---
import Navbar from "@/components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import hayat_profile from "@/Images/hayat_profile.png";
---

<Layout title="Hayat Tamboli - about me">
  <main
    class="bg-slate-100 min-h-screen flex flex-col justify-center items-center px-4 md:px-16 lg:px-32"
  >
    <div class="md:w-3/5 px-4 my-40">
      <div class="flex flex-wrap items-start">
        <div class="md:relative md:w-1/3" id="photos">
          <div
            class="bg-white p-3 pb-12 shadow-lg shadow-slate-300/30 md:absolute rotate-6 hidden md:block"
          >
            <Image
              src={hayat_profile}
              alt="Hayat's photo"
              class="aspect-square object-cover"
            />
          </div>
          <div
            class="bg-white p-3 pb-12 shadow-lg shadow-slate-300/30 md:absolute md:rotate-1"
          >
            <Image
              src={hayat_profile}
              alt="Hayat's photo"
              class="aspect-square object-cover"
            />
          </div>
        </div>
        <div
          class="rounded-3xl border-dashed flex flex-col space-y-4 justify-center min-w-40 md:w-2/3 md:p-8 pt-4"
        >
          <p class="text-2xl text-slate-950/90">
            Hi, I am Hayat, an Interaction Designer with a knack for exploring
            new technologies. Currently pursuing Master of Design at <a
              href="https://www.idc.iitb.ac.in/"
              class="font-bold hover:decoration-black hover:decoration-wavy hover:underline duration-250 transition-all"
            >
              IDC, IIT Bombay</a
            >.
          </p>
          <p class="text-2xl text-slate-950/90 mt-4">
            When not designing or coding, you will find me tinkering with
            electronics, playing NFS and watching Formula 1.
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  const photos = document.getElementById("photos");

  photos?.addEventListener("hover", () => {
    console.log("hover");
  });
</script>
