---
import type { HTMLAttributes } from "astro/types";
type Props = HTMLAttributes<"a">;
const { href, class: className, ...props } = Astro.props;
const { pathname } = Astro.url;
const subpath = pathname.match(/[^\/]+/g);
const isHomeActive = pathname === "/";
const isLabActive = pathname === "/lab";
const isAboutActive = pathname === "/about";
const isWorkUpdatesActive = pathname === "/work-updates";
---

<nav class="fixed flex justify-center items-center w-screen">
  <!-- TODO: Add selection indicator -->
  <ul
    class="flex justify-center items-center bg-white p-2 rounded-2xl space-x-2 mt-4 shadow-lg shadow-slate-100"
  >
    <li class="text-sm">
      <a
        class:list={{
          "w-fit flex justify-center py-3 px-4 rounded-lg hover:bg-slate-100 font-semibold transition-all duration-150 text-black/50 hover:text-slate-800": true,
          "text-black/100": isHomeActive,
        }}
        href="/">Hayat Tamboli</a
      >
    </li>
    <li class="text-sm">
      <a
        class:list={{
          "w-fit flex justify-center py-3 px-4 rounded-lg hover:bg-slate-100 font-semibold transition-all duration-150 text-black/50 hover:text-slate-800": true,
          "text-black/100": isLabActive,
        }}
        href="/lab">Lab</a
      >
    </li>
    <li class="text-sm">
      <a
        class:list={{
          "w-fit flex justify-center py-3 px-4 rounded-lg hover:bg-slate-100 font-semibold transition-all duration-150 text-black/50 hover:text-slate-800": true,
          "text-black/100": isAboutActive,
        }}
        href="/about">About</a
      >
    </li>
    <li class="text-sm">
      <a
        class:list={{
          "w-fit flex justify-center py-3 px-4 rounded-lg hover:bg-slate-100 font-semibold transition-all duration-150 text-black/50 hover:text-slate-800": true,
          "text-black/100": isWorkUpdatesActive,
        }}
        href="/work-updates">Updates</a
      >
    </li>
    <!-- TODO: Add a resume link -->
    <li class="text-sm">
      <a
        class="w-fit flex justify-center py-3 px-4 rounded-lg hover:bg-slate-100 font-semibold transition-all duration-150 text-black/50 hover:text-slate-800"
        href="https://drive.google.com/file/d/1x_uM27oRfGrswvB2EFfuGhJanDQAsa78/view?usp=drive_link"
        target="_blank">Resume</a
      >
    </li>
  </ul>
</nav>

<script>
  export default {
    name: "Navbar",
  };
</script>
